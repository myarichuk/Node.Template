{
  "name": "node.template",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "customize": "node scripts/customize.mjs",
    "release": "standard-version",
    "prepare": "husky install",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "build": "tsc -p tsconfig.json",
    "bundle": "tsup src/index.ts --format esm --dts --sourcemap",
    "docker:build": "docker build -t $npm_package_name .",
    "docker:run": "docker run -p 3000:3000 $npm_package_name",
    "preinstall": "node ./scripts/check-pnpm.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/myarichuk/Node.Template.git"
  },
  "packageManager": "pnpm@10.12.4",
  "private": true,
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "@types/express": "^4.17.21",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
